<?xml version="1.0"?>

<test_suite>
    <Neo4J>
        <suite name="Neo4J" functionName="Neo4J">
            <suiteStartMsg>Neo4J example suite </suiteStartMsg>

                <job init="true">
                    <jobClass>Stats</jobClass>
                    <jobRuns>10</jobRuns>
                    <jobDataInput>../Neo4J/input/sample_e_100</jobDataInput>
                    <jobDataOutputDir>../Neo4J/data/neo4j-wiki</jobDataOutputDir>
                    <!-- create bar chart -->
                    <plotTitle x="Time">Appendix A Neo4J stats job 10 runs</plotTitle>
                    <!-- print benchmark -->
                    <printBenchmark>true</printBenchmark>
                </job>

                <job init="true">
                    <jobClass>Stats</jobClass>
                    <jobDataInput>../Neo4J/input/sample_e_201</jobDataInput>
                    <jobDataOutputDir>../Neo4J/data/neo4j-wiki</jobDataOutputDir>
                </job>

                <job init="true">
                    <jobClass>Stats</jobClass>
                    <jobDataInput>../Neo4J/input/sample_e_300</jobDataInput>
                    <jobDataOutputDir>../Neo4J/data/neo4j-wiki</jobDataOutputDir>
                </job>

                <job init="true">
                    <jobClass>Stats</jobClass>
                    <jobDataInput>../Neo4J/input/sample_e_400</jobDataInput>
                    <jobDataOutputDir>../Neo4J/data/neo4j-wiki</jobDataOutputDir>
                </job>

            <suiteEndMsg>End Neo4J suite</suiteEndMsg>
        </suite>
    </Neo4J>

    <PSQL>
        <!-- create line plot for suite -->
        <suite name="PSQL" suitePlotTitle="Appendix A PSQL line plot" y="Time" x="NodeSize" functionName="PSQL">
            <suiteStartMsg>PSQL example suite</suiteStartMsg>

            <job init="true">
                <jobClass>Stats</jobClass>
                <jobDataInput>../Neo4J/input/sample_e_100</jobDataInput>
                <dbURL>jdbc:postgresql://localhost/Graph_DB</dbURL>
                <dbName>TEST_e_100</dbName>
                <dbLogin>postgres</dbLogin>
                <dbPass>Dupa#12</dbPass>
            </job>

            <job init="true">
                <jobClass>Stats</jobClass>
                <jobDataInput>../Neo4J/input/sample_e_201</jobDataInput>
                <dbURL>jdbc:postgresql://localhost/Graph_DB</dbURL>
                <dbName>TEST_e_201</dbName>
                <dbLogin>postgres</dbLogin>
                <dbPass>Dupa#12</dbPass>
            </job>

            <job init="true">
                <jobClass>Stats</jobClass>
                <jobRuns>1</jobRuns>
                <jobDataInput>../Neo4J/input/sample_e_300</jobDataInput>
                <dbURL>jdbc:postgresql://localhost/Graph_DB</dbURL>
                <dbName>TEST_e_201</dbName>
                <dbLogin>postgres</dbLogin>
                <dbPass>Dupa#12</dbPass>
            </job>

            <job init="true">
                <jobClass>Stats</jobClass>
                <jobDataInput>../Neo4J/input/sample_e_400</jobDataInput>
                <dbURL>jdbc:postgresql://localhost/Graph_DB</dbURL>
                <dbName>TEST_e_201</dbName>
                <dbLogin>postgres</dbLogin>
                <dbPass>Dupa#12</dbPass>
            </job>

            <suiteEndMsg>PSQL the end</suiteEndMsg>
        </suite>
    </PSQL>

    <radarPlot title="Appendix A Neo4J and PSQL radar plot">
        <suite name="PSQL" />
        <suite name="Neo4J" />
    </radarPlot>

    <complexPlot title="Appendix A Neo4J and Psql complex plot" x="EdgeSize" y="Time">
        <suite name="Neo4J" />
        <suite name="PSQL" />
    </complexPlot>

    <combinedPlot title="Appendix A Neo4J and PSQL combined plot" x="EdgeSize" y="Time">
      <suite name="Neo4J" />
      <suite name="PSQL" />
    </combinedPlot>
</test_suite>